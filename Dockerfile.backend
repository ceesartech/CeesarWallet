# Backend Dockerfile
FROM openjdk:17-jdk-slim

WORKDIR /app

# Copy Gradle wrapper and build files
COPY gradlew .
COPY gradle gradle
COPY build.gradle.kts .
COPY settings.gradle.kts .

# Copy source code
COPY backend backend
COPY core core

# Build the application
RUN ./gradlew :backend:shadowJar

# Copy the built JAR
COPY backend/build/libs/backend-1.0.0-all.jar app.jar

# Expose port
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "app.jar"]
